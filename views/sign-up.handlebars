<div class="signup-form u-absolute position">
    <h1>Signup</h1>
    <form>
    <div class="form-group">
        <label class="form-group-label" for="username-signup">Username:</label>
        <input class="form-group-input" type="text" id="username-signup"/>
        <button class="form-group-btn" type="reset">X</button>
    </div>
    <div class="form-group">
        <label class="form-group-label" for="password-signup">Password:</label>
        <input class="form-group-input" type="password" id="password-signup"/>
        <button class="form-group-btn" type="reset">X</button>
    </div>
    <button class="form-group-btn btn-primary" type="submit">Signup</button>
    </form>
    <p>Already have an account? <a href="/login">Login</a></p>
</div>

<script src="./js/signup.js"></script>